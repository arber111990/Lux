<div style="position: relative;">
  <div class="navbar-wagon">
  <!-- Logo -->
  <h4><%= link_to "The Lux-Leaz Co.", root_path%></h4>

  <!-- Right Navigation -->
  <div style="">
    <div class="navbar-wagon-right hidden-xs hidden-sm">

      <% if user_signed_in? %>

        <!-- Links when logged in -->
        <h5><%= link_to "Add a listing", new_item_path, class: "navbar-wagon-item navbar-wagon-link" %></h5>
        <h5><%= link_to "Profile", user_path(current_user.id), class: "navbar-wagon-item navbar-wagon-link" %></h5>
        <h5>
          <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
          <%= t(".sign_out", default: "Sign Out") %>
          <% end %>
        </h5>
        <!-- Avatar with dropdown menu -->

      <% else %>
        <!-- Login link (when logged out) -->
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to t(".sign_in", default: "Sign up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    </div>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
</div>

</div>

