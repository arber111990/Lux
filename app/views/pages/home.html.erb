<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'banner-image.jpg'%>);">
  <div class="banner-content">
    <h1>LuxLeaz</h1>
        <form class="form-inline">
          <label class="sr-only" for="inlineFormInput">Where</label>
          <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="Where">

          <label class="sr-only" for="inlineFormInputGroup">Start Date</label>
          <div class="input-group input-start mb-2 mr-sm-2 mb-sm-0">
            <div class="input-group-addon"><i class="far fa-calendar-alt"></i></div>
            <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Start Date">
          </div>

          <label class="sr-only" for="inlineFormInputGroup">End Date</label>
          <div class="input-group input-start mb-2 mr-sm-2 mb-sm-0">
            <div class="input-group-addon"><i class="far fa-calendar-alt"></i></div>
            <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="End Date">
          </div>

          <label class="sr-only" for="inlineFormInput">Vehicle</label>
          <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="Vehicle">

          <button type="submit" class="btn btn-primary mb-2">Submit</button>
        </form>

  </div>
</div>

<div class="home-wrapper">
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.4)), url('https://source.unsplash.com/360x175?cocktail');">
        <div class="card-category">
          <h3> A Luxury item</h3>
        </div>
        <div class="card-description">
          <h5> A luxury description</h5>
        </div>
      </div>
    </div>
  </div>
</div>
