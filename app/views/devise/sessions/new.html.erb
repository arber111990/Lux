<div class="container-size">
  <div class="banner-login" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.6) 50%), url(<%= image_path 'https://images.unsplash.com/photo-1472759153518-0d0c1e11f854?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=3cc98903ecd7f76b22460ea69538cd7e&auto=format&fit=crop&w=1050&q=80'%>);">

  <div class="login-container">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <h2>Log in</h2>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in", class: "form-button" %>
        <span></span>
        <div class="form-actions">
          <%= render "devise/shared/links" %>
        </div>
      </div>

    <% end %>
  </div>
</div>

