<div class="banner banner-small" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'banner-image.jpg'%>);">
</div>

<%= @item.title %>
<%= @item.description %>
<% if @item.reviews %>
  <% @item.reviews.each do |review| %>
    <%= review.title %>
    <%= review.description %>
  <% end %>
<% end %>
<% if @item.bookings %>
  <% @item.bookings.each do |booking|%>
    <%= booking.start_date %>
    <%= booking.end_date %>
  <% end %>
<% end %>
<%= link_to "Make a Booking", new_item_booking_path(@item) %>
<%= link_to "Write a Review", new_item_review_path(@item)%>
<%= link_to "Delete Item", item_path(@item),
        method: :delete,
        data: { confirm: "are you sure?"} %>
